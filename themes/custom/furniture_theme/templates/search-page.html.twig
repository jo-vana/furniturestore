<div class="top-wrapper">
        <div class="filter">
            {{ form.filters.sort }}
        </div>
    <div class="button">
        {{ form.filters.actions.submit }}
        <h2>Showing 1-10 of {{ form.content.data.counters }} results</h2>
    </div>
</div>
{{ form.form_build_id }}
{{ form.form_token }}
{{ form.form_id }}

<div class="row">
    {#<div class="col-md-6">#}
        {#{{ form.filters.title }}#}
    {#</div>#}
    {#<div class="col-md-6">#}
        {#{{ form.filters.published }}#}
    {#</div>#}
</div>

<div class="row">
    {% for key,entry in form.content.data %}
        {% if key matches '/^\\d+$/' %}
            <div class="col-md-4">
                <div class="fur-img">
                {% for en_key,en in entry.image %}
                {% if en_key matches '/^\\d+$/' %}

                <a href ="{{ en.nid }}"><img src="{{ en.img }}"/></a>

                {% endif %}
                {% endfor %}
                </div>
                {#Hover items#}

                <div class="bar">
                    <div class="search-icon">
                       <a href="" data-node-type="{{ entry.nid }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                    </div>
                    <div class="cart">
                        <a href="#">Add to Cart</a>
                    </div>
                    <div class="like_dislike">
                        <div class="like">
                            <a href={{ like_url }}><i class="fa fa-heart-o" aria-hidden="true"></i>
                            </a>
                            <span id="like">{{ entry.likes }}</span>
                        </div>
                    </div>
                </div>

                {% for en_key,en in entry.taxonomy_name %}
                {% if en_key matches '/^\\d+$/' %}

                    <div class="block-fur-term">
                        <a href ="{{ en.url }}"><p>{{ en.name }}</p></a>
                    </div>
                {% endif %}

                {% endfor %}

                <div class="block-fur-title">
                    <h2><a href ="{{ entry.nid }}">{{ entry.title }}</a></h2>
                </div>

                <div class="block-fur-price">
                    <p>${{ entry.price }}</p>
                </div>

                {#When clicked on Search#}
                <div class="attachment" data-node-type="{{ entry.nid }}">

                    {% for en in entry.image %}
                        <div class="search-image">
                            <img src="{{ en.img }}">
                        </div>
                    {% endfor %}

                    <div class="search-title">
                        <h1>{{ entry.title }}</h1>
                    </div>

                    <div class="search-price">
                        <p>${{ entry.price }}</p>
                    </div>

                    {% for en_key,en in entry.taxonomy_name %}
                        <div class="search-term">
                            <a href ="{{ en.url }}"><p>{{ en.name }}</p></a>
                        </div>
                    {% endfor %}

                    <div class="search-body">
                        <p>{{ entry.body }}</p>
                    </div>

                </div>

            </div>
        {% endif %}
    {% endfor %}
</div>

{{ form.pager }}